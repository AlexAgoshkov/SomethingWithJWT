@model MySocNet.Input.LoginSignalRModel
<h2>Login</h2>

<form asp-action="Login" asp-controller="Signal">
    <div>
        <div class="form-group">
            <label asp-for="ChatId">ChatId</label><br />
            <input type="text" asp-for="ChatId" />
           <br />
        </div>
        <div class="form-group">
            <label asp-for="AccessToken">Token</label><br />
            <input asp-for="AccessToken" />
           <br />
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn" />
        </div>
    </div>
</form>